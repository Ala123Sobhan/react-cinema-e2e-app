{
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "plugin:react/recommended",
      "standard"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "16.0"
      }
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "semi": ["error", "always"],
      "space-before-function-paren": ["off", { "anonymous": "always", "named": "always" }],
      "camelcase": "off",
      "no-return-assign": "off"
    }
  }
  